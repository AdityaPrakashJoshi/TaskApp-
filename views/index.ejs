<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="main w-full min-h-screen bg-black">
    <div class="form p-10">
        <form action="/create" method="post">
            <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 text-black placeholder-gray-400" type="text" placeholder="Title" name="title">
            <textarea class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-800 text-black placeholder-gray-400" placeholder="Write your task here" name="description"></textarea>

            <input class="mt-2 bg-blue-600 text-white px-5 py-2 cursor-pointer" type="submit" value="Create Task">
        </form>
    </div>
    <div class="tasks flex gap-3 flex-wrap p-10">
        <% if (files.length > 0) { %>
            <% files.forEach((val) => { %>
                <div class="task w-72 px-3 py-4 rounded-md bg-gray-700 text-white">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                    <a class="text-blue-300 inline-block mt-3" href="/files/<%= val %>">Read More...</a>

                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text-white">No tasks yet</h3>
        <% } %>
    </div>
    
    <script src="/javascripts/script.js"></script>
</body>
</html>
